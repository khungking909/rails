<header class ="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("name_page"),"#", id:"logo" %>
    <nav>
      <ul class = "nav navbar-nav navbar-right">
        <li><%= link_to t("english"), locale: :en %></li>
        <li><%= link_to t("vietnamese"), locale: :vi %></li>
        <li><%= link_to t("home"),"#" %></li>
        <li><%= link_to t("product"),"#" %></li>
        <li><%= link_to t("user"), users_path %></li>
        <li><%= link_to t("demo"),"#" %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle" ,"data-toggle": "dropdown", id: "account" do %>
              <%= t("headers.account") %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu" >
              <li><%= link_to t("headers.profile"), current_user %></li>
              <li><%= link_to t("headers.settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li> <%= link_to t("headers.log_out"), logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("sessions.log_in"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
