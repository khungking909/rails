<% if flash.present? %>
  <div id="error_explanation">
    <% case %>
      <% when flash[:danger]%>
        <div class="alert alert-danger">
          <%= flash[:danger] %>
        </div>
      <% when flash[:success]%>
        <div class="alert alert-success">
          <%= flash[:success] %>
        </div>
      <% when flash[:error]%>
        <div class="alert alert-warning">
          <%= flash[:error] %>
        </div>
      <% end %>

  </div>
<% end %>
